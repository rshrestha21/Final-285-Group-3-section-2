@model IEnumerable<Services.Models.Service>
@{
    ViewBag.Title = "MydashBoard";
}

<br />
<br />
<br />
<h1 class="text-center"> My Dashboard</h1>
<div class="row" style="margin-left: 220px;">
    <div class="col-sm-4">
        <a href="@Url.Action("Create", "Services")" class="btn btn-block btn-warning " style="font-size: 25px;"><i class="fas fa-plus"></i> Create One</a>
    </div>
    <div class="col-sm-4">
        <a href="@Url.Action("Index", "Home")" class="btn btn-block btn-danger " style="font-size: 25px;"><i class="fas fa-arrow-left"></i> Go back</a>
    </div>


</div>
<br />

<table id="tblInfo" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.servicetype.Servicekind)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Desription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Startdate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Enddate)
            </th>
            <th></th>
        </tr>
    </thead>
   
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.servicetype.Servicekind)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Desription)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Startdate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Enddate)
                    </td>

                    <td>
                        <div class="dropdown">
                            <button class="btn btn-info dropdown-toggle" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Action
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
                                <button class="dropdown-item" type="button">@Html.ActionLink("Edit", "Edit", new { id = item.ID })</button>
                                <button class="dropdown-item" type="button">@Html.ActionLink("Details", "Details", new { id = item.ID })</button>
                                <button class="dropdown-item" type="button">@Html.ActionLink("Delete", "Delete", new { id = item.ID })</button>
                            </div>

                            @*<div class="dropdown-menu">
                            <a class="dropdown-item" href="@Html.ActionLink("Edit", "Edit", new { id = item.ID })">Edit</a>
                            <a class="dropdown-item" href="@Html.ActionLink("Details", "Details", new { id = item.ID })">Details</a>
                            <a class="dropdown-item" href="@Html.ActionLink("Delete", "Delete", new { id = item.ID })">Delete</a>
                        </div>*@
                        </div>

                    </td>
                </tr>

            }
        </tbody>

</table>


<script>
    $(document).ready(function () {
        $('#tblInfo').dataTable();
    });

</script>
